# ==============================================
# H2O Allegiant - Environment Variables
# ==============================================
# Copy this file to .env.local and fill in your values

# ==============================================
# API Configuration
# ==============================================

# Backend API Base URL
# Development: http://localhost:8000/api/v1
# Production: https://api.h2oallegiant.com/api/v1
# IMPORTANT: Include /api/v1 at the end
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api/v1

# Disable API calls (frontend-only mode)
# Set to "0" to connect to real backend (PRODUCTION READY)
# Set to "1" ONLY for UI development without backend
NEXT_PUBLIC_DISABLE_API=0

# ==============================================
# Authentication (Future)
# ==============================================

# JWT Secret (backend only, not needed in frontend)
# API_JWT_SECRET=your-secret-key-here

# Session timeout in minutes
# NEXT_PUBLIC_SESSION_TIMEOUT=30

# ==============================================
# Analytics & Monitoring
# ==============================================

# Vercel Analytics
# Get from: https://vercel.com/analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Sentry DSN (Error tracking)
# Get from: https://sentry.io/
# NEXT_PUBLIC_SENTRY_DSN=

# Google Analytics
# NEXT_PUBLIC_GA_ID=

# ==============================================
# Feature Flags
# ==============================================

# Enable AI features
NEXT_PUBLIC_ENABLE_AI_FEATURES=true

# Enable file upload
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=true

# Enable smart import
NEXT_PUBLIC_ENABLE_SMART_IMPORT=true

# Enable real-time collaboration (future)
# NEXT_PUBLIC_ENABLE_REALTIME=false

# ==============================================
# External Services (Future)
# ==============================================

# AWS S3 for file storage
# AWS_S3_BUCKET=
# AWS_S3_REGION=
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# OpenAI API (for AI features)
# OPENAI_API_KEY=

# ==============================================
# Development
# ==============================================

# Show debug logs in console
NEXT_PUBLIC_DEBUG=false

# Show performance metrics
NEXT_PUBLIC_SHOW_METRICS=false

# ==============================================
# Database (Backend only)
# ==============================================

# PostgreSQL connection string
# DATABASE_URL=postgresql://user:password@localhost:5432/h2oallegiant

# Redis for caching
# REDIS_URL=redis://localhost:6379

# ==============================================
# Email (Backend only - Future)
# ==============================================

# SMTP configuration
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM=noreply@h2oallegiant.com

# ==============================================
# Notes
# ==============================================
# 
# - Never commit .env.local to git
# - Use .env.local for local development
# - Use Vercel/deployment platform env vars for production
# - Prefix public vars with NEXT_PUBLIC_ to expose to browser
# - Keep sensitive keys (API keys, secrets) without NEXT_PUBLIC_
#
